@model WebApp.Models.CreateKorisnikViewModel

@{
    ViewData["Title"] = "Prijavi kurseve";
}
<div class="containerLog">
    <div class="form">
        <form asp-action="AddPohadjanje" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="Korisnik.Ime" class="control-label"></label>
            <input asp-for="Korisnik.Ime" class="input" />
            <span asp-validation-for="Korisnik.Ime" class="text-danger"></span>

            <label asp-for="Korisnik.Prezime" class="control-label"></label>
            <input asp-for="Korisnik.Prezime" class="input" />
            <span asp-validation-for="Korisnik.Prezime" class="text-danger"></span>

            <label asp-for="Korisnik.Username" class="control-label"></label>
            <input asp-for="Korisnik.Username" class="input" />
            <span asp-validation-for="Korisnik.Username" class="text-danger"></span>

            <label asp-for="Korisnik.Password" class="control-label"></label>
            <input asp-for="Korisnik.Password" class="input" />
            <span asp-validation-for="Korisnik.Password" class="text-danger"></span>

            <label asp-for="Korisnik.BrPoena" class="control-label"></label>
            <input asp-for="Korisnik.BrPoena" class="input" />
            <span asp-validation-for="Korisnik.BrPoena" class="text-danger"></span>

            <label class="control-label">Kurs:</label>

            @Html.DropDownList("KursId", Model.Kursevi, new { @class = "input", @id = "pohadjanje-select" })
            <input type="submit" value="Dodaj kurs" class="button" />
        </form>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-weight: 300;
    }

    .containerLog {
        width: 100%;
        height: 100%;
        text-align: center;
        align-items: center;
        background: transparent;
    }

    .h1 {
        font-size: 40px;
        transition-duration: 1s;
        font-weight: 200;
        color: white;
    }
    .control-label{
        font-size:20px;
        color:white;
    }
    .form {
        position: relative;
      
    }

    .input {
        display: block;
        outline: 0;
        border: 1px solid;
        background-color: rgba(255, 255, 255, 0.3);
        width: 250px;
        border-radius: 3%;
        padding: 10px 15px;
        margin: 4px auto 4px auto;
        display: block;
        text-align: center;
        font-size: 18px;
        color: white;
        transition-duration: 0.25s;
        font-weight: 300;
    }

        .input:hover {
            background-color: white;
            opacity: 0.5;
        }

        .input:focus {
            background-color: white;
            width: 300px;
            color: #5375e2;
        }

    ::-webkit-input-placeholder {
        color: white;
    }

    .button {
        outline: 0;
        margin:2% auto 7% 0;
        background-color: white;
        border: 0;
        padding: 10px 15px;
        color: #5375e2;
        border-radius: 3px;
        width: 250px;
        cursor: pointer;
        font-size: 18px;
        transition-duration: 0.25s;
    }

        .button:hover {
            background-color: rgb(245, 247, 249);
        }
</style>

