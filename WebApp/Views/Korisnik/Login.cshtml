@model WebApp.Models.LoginViewModel



<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="Login" class="form">
        <div class="containerLog">
            <h1 class="h1">Dobrodošli!</h1>
            <hr />
           @* <label asp-for="Username" class="control-label"></label>*@
            <input asp-for="Username" class="input" placeholder="Korisničko ime" />
            <span asp-validation-for="Username" class="text-danger"></span>

            <input asp-for="Password" class="input" type="password" placeholder="Šifra" />
            <span asp-validation-for="Password" class="text-danger"></span>

            @* //novo*@
            <div class="wrapper">
                Korisnik
                @Html.RadioButtonFor(model => model.KorisnikORAdministrator, "Korisnik")
                Administrator
                @Html.RadioButtonFor(model => model.KorisnikORAdministrator, "Administrator")
            </div>
            <br />
            @Html.ValidationMessageFor(m => m.KorisnikORAdministrator)
            <input type="submit" value="Prijavi se" class="button" />
        </div>
    </form>
</div>


<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-weight: 300;
    }

    .containerLog {
        width: 100%;
        height: 100%;
        text-align: center;
        align-items: center;
        background: transparent;
    }

    .h1 {
        font-size: 40px;
        transition-duration: 1s;
        font-weight: 200;
        color: white;
    }

    .form {
        position: relative;
        z-index: 2;
    }

    .input {
        display: block;
        outline: 0;
        border: 1px solid;
        background-color: rgba(255, 255, 255, 0.3);
        width: 250px;
        border-radius: 3px;
        padding: 10px 15px;
        margin: 0 auto 10px auto;
        display: block;
        text-align: center;
        font-size: 18px;
        color: white;
        transition-duration: 0.25s;
        font-weight: 300;
    }

        .input:hover {
            background-color: white;
            opacity: 0.5;
        }

        .input:focus {
            background-color: white;
            width: 300px;
            color: #5375e2;
        }

    ::-webkit-input-placeholder {
        color: white;
    }

    .button {
        outline: 0;
        margin-bottom: 10px;
        background-color: white;
        border: 0;
        padding: 10px 15px;
        color: #5375e2;
        border-radius: 3px;
        width: 250px;
        cursor: pointer;
        font-size: 18px;
        transition-duration: 0.25s;
    }

        .button:hover {
            background-color: rgb(245, 247, 249);
        }

    .wrapper {
        display: inline-flex;
        color: white;
        font-size: 15px;
        height: 50px;
        width: 200px;
        margin-bottom: 15px;
        align-items: center;
        justify-content: space-between;
        border-radius: 5px;
        padding: 20px 15px;
        box-shadow: 5px 5px 30px rgba(0,0,0,0.2);
    }
</style>

