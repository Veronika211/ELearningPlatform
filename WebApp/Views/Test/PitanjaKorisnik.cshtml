@model WebApp.Models.TestsViewModel


<h1>Pitanja: </h1>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Redni broj</th>
            <th>Pitanje</th>
            <th>Pogledaj</th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (Checkbox c in Model.Checkboxes)
        {
            <tr>
                <td>@{rowNo++;} @rowNo</td>
                <td>@c.Naziv</td>
                <td>@Html.ActionLink("Pogledaj", "PitanjaCheckboxKorisnik", "Test", new { id = c.PitanjeId })</td>
            </tr>
        }
        @foreach (Dopuna d in Model.Dopune)
        {
            <tr>
                <td>@{rowNo++;} @rowNo</td>
                <td>@d.Naziv</td>
                <td>@Html.ActionLink("Pogledaj", "PitanjaDopunaKorisnik", "Test", new { id = d.PitanjeId })</td>
            </tr>
        }
    </tbody>
</table>

