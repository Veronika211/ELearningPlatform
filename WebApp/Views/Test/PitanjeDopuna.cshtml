@model Dopuna 


<h1>Pregled pitanja:</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="IzmeniPitanjeDopuna" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3>Pitanje</h3>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3>Tacan odgovor:</h3>
                <input asp-for="TacanOdgovor" class="form-control" />
                <span asp-validation-for="TacanOdgovor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3>Bodovi:</h3>
                <input asp-for="TacanBodovi" class="form-control" />
                <span asp-validation-for="TacanBodovi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Izmeni pitanje" class="btn btn-primary" />
            </div> @*ovde implementirati u kontroleru za izmenu pitanja sutra*@
        </form>
    </div>
</div>