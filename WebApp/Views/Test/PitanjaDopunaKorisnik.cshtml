@model Dopuna


@Model.Naziv

<form asp-action="PotvrdiOdgovorDopuna" method="post">
    <div class="form-group">
        <h3>ID Pitanja</h3>
        <input asp-for="PitanjeId" class="form-control" />
        <span asp-validation-for="PitanjeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <h3>Odgovor:</h3>
        <input asp-for="TacanOdgovor" placeholder="Unesite odgovor..." value="" class="form-control" />
        <span asp-validation-for="TacanOdgovor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Potvrdi odgovor" class="btn btn-primary" />
    </div>
</form>