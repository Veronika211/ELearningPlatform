@model Dopuna

    <h3>
        @Model.Naziv
    </h3>
<form asp-action="PotvrdiOdgovorDopuna" method="post">
    <div class="containerLog">
        <h5>ID Pitanja</h5>
        <input asp-for="PitanjeId" class="input" />
        <span asp-validation-for="PitanjeId" class="text-danger"></span>
    </div>
    <div class="containerLog">
        <h4>Odgovor:</h4>
        <input asp-for="TacanOdgovor" placeholder="Unesite odgovor..." value="" class="input" />
        <span asp-validation-for="TacanOdgovor" class="text-danger"></span>
    </div>
    <div class="containerLog">
        <input type="submit" value="Potvrdi odgovor" class="btn btn-primary" />
    </div>
</form>
<style>

    .input {
        display: block;
        outline: 0;
        border: 1px solid;
        background-color: rgba(255, 255, 255, 0.3);
        width: 250px;
        border-radius: 3px;
        padding: 10px 15px;
        margin: 0 auto 10px auto;
        display: block;
        text-align: center;
        font-size: 18px;
        color: white;
        transition-duration: 0.25s;
        font-weight: 300;
    }
    h3 {
        text-align: center;
        margin-bottom: 2%;
        margin-top: 3%;
    }
        .input:hover {
            background-color: white;
            opacity: 0.5;
        }

        .input:focus {
            background-color: white;
            width: 300px;
            color: #5375e2;
        }
    .containerLog {
        width: 100%;
        height: 100%;
        text-align: center;
        align-items: center;
        background: transparent;
    }
</style>