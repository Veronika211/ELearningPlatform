@model Dopuna

<h1>Unesite novo pitanje na dopunu:</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DodajPitanjeNaDopunu" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TacanOdgovor" class="control-label"></label>
                <input asp-for="TacanOdgovor" class="form-control" />
                <span asp-validation-for="TacanOdgovor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TacanBodovi" class="control-label"></label>
                <input asp-for="TacanBodovi" class="form-control" />
                <span asp-validation-for="TacanBodovi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Unesi pitanje" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>