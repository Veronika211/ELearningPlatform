@model List<Domain.Kurs>
@{
    ViewData["Title"] = "Kursevi";
}

<h1>Kursevi: </h1>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Redni broj</th>
            <th>Naziv kursa</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (Kurs k in Model)
        {
            <tr>
                <td>@{rowNo++;} @rowNo</td>
                <td>@k.NazivKursa</td>
                <td>@Html.ActionLink("Pogledaj lekcije", "DetailsKorisnik", "Kurs", new { id = k.KursId })</td>
                <td>@Html.ActionLink("Testovi", "PrikaziTestKorsnik", "Test", new { id = k.KursId })</td>
            </tr>
        }
    </tbody>
</table>