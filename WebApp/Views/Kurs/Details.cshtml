@model Kurs

<h1> Kurs</h1>
<h3>ID kursa: @Model.KursId</h3>
<h3>Naziv: @Model.NazivKursa</h3>


<h1>Lekcije: </h1>


<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Redni broj</th>
            <th>Naziv lekcije</th>
            <th>Sadrzaj</th>
            <th>Izmeni</th>
            <th>Izbrisi</th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (Lekcija l in Model.Lekcije)
        {
            <tr>
                <td>@{rowNo++;} @rowNo</td>
                <td>@l.Naziv</td>
                <td>@Html.ActionLink("Sadrzaj", "PrikaziSadrzaj", "Kurs", new { id = l.LekcijaId })</td>
                <td>@Html.ActionLink("Izmeni", "IzmenaLekcije", "Kurs", new { id = l.LekcijaId })</td>
                <td>@Html.ActionLink("Izbrisi", "IzbrisiLekciju", "Kurs", new { id = l.LekcijaId, kursId = Model.KursId })</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <form asp-controller="Kurs" asp-action="UnosLekcije">
        <input type="submit" value="Unesi novu lekciju" asp-controller="Kurs" asp-action="UnosLekcije" />
    </form>
</div>


